{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "haxe",
      "args": "active configuration",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$haxe-absolute",
        "$haxe",
        "$haxe-error",
        "$haxe-trace"
      ]
    },
    {
      "label": "HL debug",
      "type": "hxml",
      "file": "hl.debug.hxml",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$haxe-absolute",
        "$haxe",
        "$haxe-error",
        "$haxe-trace"
      ]
    },
    {
      "label": "HL release",
      "type": "hxml",
      "file": "hl.hxml",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$haxe-absolute",
        "$haxe",
        "$haxe-error",
        "$haxe-trace"
      ]
    },
    {
      "label": "build server",
      "type": "hxml",
      "file": "hl.server.hxml",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$haxe-absolute",
        "$haxe",
        "$haxe-error",
        "$haxe-trace"
      ]
    },
    {
      "type": "shell",
      "label": "run hl",
      "command": "cd ../../ && hl bin/game.hl",
      "dependsOn": "kill hl",
      "runOptions": {
        "instanceLimit": 2
      }
    },
    {
      "type": "shell",
      "label": "kill hl",
      "command": "killall -9 hl || :"
    }
  ]
}

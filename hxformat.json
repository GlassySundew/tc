{
  "indentation": {
    "conditionalPolicy": "aligned"
},
  "lineEnds": {
    "rightCurly": "both",
    "objectLiteralCurly": {
      "leftCurly": "after"
    }
  },
  "sameLine": {

    "functionBody": "same",
    "ifBody": "same",
    "ifElse": "next",
    "doWhile": "next",
    "tryBody": "next",
    "tryCatch": "next",
    "untypedBody": "keep"
  },
  "emptyLines":{
    "afterLeftCurly": "remove",
    "beforeDocCommentEmptyLines": "none",
    "afterImportsUsing": 1,
    "afterPackage": 1,
    "finalNewline": true,
    "classEmptyLines": {
        "betweenFunctions": 1
    }
  },
  "whitespace":{
    "typeHintColonPolicy": "after"
  }
}
